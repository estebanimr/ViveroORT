@model Dominio.EntidadesNegocio.TipoPlanta

@{
    ViewData["Title"] = "Create";
}
<body class="bg-dark text-light">
    <div class="row justify-content-center">
        <div class="col-5">
            <h1>Crear un Tipo de Planta nuevo</h1>

            <h4>Tipo Planta</h4>
            <hr />

            <form asp-action="Create" id="formTPCreate" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                @*<div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>*@
                <div class="form-group">
                    <label asp-for="NomTipoPlanta" class="control-label">Nombre de Tipo Planta:</label>
                    <input asp-for="NomTipoPlanta"  class="form-control" id="nomTP"  />
                    @*<span asp-validation-for="NomTipoPlanta" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="DescTipoPlanta" class="control-label">Descripcion de Tipo Planta:</label>
                    <input asp-for="DescTipoPlanta" class="form-control" id="descTP"  />
                    @*<span asp-validation-for="DescTipoPlanta" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear un Nuevo Tipo Planta" class="btn btn-primary" />
                </div>
                <p id="sMensaje" class="text-danger"></p>
                <span class="text-danger">@ViewBag.Error</span>
            </form>


            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>
        document.querySelector("#formTPCreate").addEventListener('submit', FormTP);

        function FormTP(evento) {
            evento.preventDefault();

            let nombreTP = document.querySelector("#nomTP").value;
            let descripcionTP = document.querySelector("#descTP").value;
            let mensaje = "";

            if (nombreTP != "" && descripcionTP != "") {
                this.submit();
            } else {
                mensaje = "Error,Controle el ingreso de datos";
            }
            document.querySelector("#sMensaje").innerHTML = mensaje;
        }

    </script>
}
