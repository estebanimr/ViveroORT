@model Dominio.EntidadesNegocio.Usuario

@{
    ViewData["Title"] = "Login";
}
<body class="bg-dark text-light">

    <div class="row justify-content-center">
        <div class="col-2">
            <h1>Login</h1>
            <h4 class="text-muted">Usuario</h4>
            <hr />
            <form asp-action="Login" method="post" id="formularioLogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email </label>
                    <input asp-for="Email" type="text" class="form-control" name="email" id="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pass" class="control-label"></label>
                    <input asp-for="Pass" type="password" class="form-control" name="pass" id="pass" required />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
            <div class="mt-2">
                <a asp-action="Index">Ir a Home Page</a>
            </div>

            <span class="text-danger">@ViewBag.Mensaje</span>
            <p id="pMensaje">@ViewBag.Logueado</p>
        </div>
    </div>

</body>




@section Scripts
{

    <script>
        document.querySelector("#formularioLogin").addEventListener('submit', validarFormularioLogin);

        function validarFormularioLogin(evento) {
            evento.preventDefault();
            let email = document.querySelector("#email").value;
            let pass = document.querySelector("#pass").value;
            if (email != "" && pass != "") {
                this.submit();
            } else {
                document.querySelector("#pMensaje").innerHTML = "Error de datos ingresados";
            }
        }

    </script>

}